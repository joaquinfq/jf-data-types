{
    "env"     : {
        "production" : {
            "presets" : [
                "minify"
            ]
        },
        "testing"       : {
            "plugins" : [
                "transform-es2015-modules-commonjs"
            ]
        }
    },
    "presets" : [
        [
            "env",
            {
                "modules" : false,
                "targets" : {
                    "uglify"   : true,
                    "browsers" : [
                        "> 1%",
                        "last 2 versions",
                        "not ie <= 11"
                    ]
                }
            }
        ],
        "stage-2"
    ],
    "plugins" : [
        "transform-class-properties",
        "transform-runtime"
    ]
}
