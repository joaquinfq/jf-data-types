{
    "presets" : [
        [
            "env",
            {
                "modules" : false,
                "targets" : {
                    "uglify"   : true,
                    "browsers" : [
                        "> 1%",
                        "last 2 versions",
                        "not ie <= 11"
                    ]
                }
            }
        ],
        "stage-2"
    ],
    "plugins" : [
        "transform-class-properties",
        "transform-es2015-modules-commonjs",
        "transform-runtime"
    ]
}
